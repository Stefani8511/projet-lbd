<section class="section" id="bg">
  <div class="container is-fullhd">


    <form action="/articles/add" method="POST" enctype="multipart/form-data">

      <div class="field">
        <label class="label">Titre de l'article</label>
        <div class="control">
          <input class="input" type="text" name="title">
        </div>
      </div>




      <div class="field">
        <label class="file-label">
          <input class="file-input" type="file" name="image">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choisir une image…
            </span>
          </span>
        </label>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Catégorie</label>
        <select name="category">
          {{#each category}}
          <option value="{{this.id}}" name="title">{{this.title}}</option>
          {{/each}}
        </select>
      </div>
      <div class="control">
        <a href="/articles/category" class="btn btn-warning my-2">Ajouter une catégorie</a>

      </div>
      <div class="field">
        <label class="label">Contenu</label>
        <div class="control">
          <textarea class="textarea" name="content"> </textarea>
          {{!-- <script>
            CKEDITOR.replace("content")


          </script> --}}

        </div>
      </div>

      <div class="field">
        <p class="control has-icons-left">
          <span class="select">
            <select id="monselect">
              <option selected value="1" name="add-post">1-A poster uniquement</option>
              <option value="2" name="add-sell">2-A vendre seulement</option>
              <option value="3" name="sell-post">3-A vendre et poster</option>
            </select>
          </span>
          <span class="icon is-small is-left">
            <i class="fas fa-globe"></i>
          </span>
        </p>
      </div>

    
      <div class="field">
        <label class="label">Tarif</label>
        <div class="control">
          <input class="input" type="number" name="price">
        </div>
      </div>



      <div class="field is-grouped">


        <div class="control">
          <button class="button is-link">Enregistrer</button>
        </div>
        <div class="control">
          <button class="button is-link is-light">Annuler</button>
        </div>
      </div>
    </form>
  </div>
</section>