<section class="register">
    <div class="container is-fullhd">


<ul class="list-group list-group-flush">
    {{#each errors}}
  <li class="list-group-item">{{this}}</li>
  {{/each}}
</ul>

     <form class="register2"action="/user/register" method="POST" enctype="multipart/form-data">
            <div class="field">
                <label class="label">Nom</label>
                <div class="control">
                    <input class="input" type="text" name="name" value={{data.name}}>
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input" type="email" placeholder="Email"  name="email" value={{data.email}}>
                    <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                    </span>
                    
                </div>                
            </div>


            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="password" placeholder="Mot de passe" name="password" value={{data.password}}>
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Enregistrer</button>
                </div>
                
            </div>
        </form>
        <br>
        <div class="control">
                 <a href="/"> <button  class="button is-link is-light">Annuler</button></a>  
                </div>
    </div>
</section>